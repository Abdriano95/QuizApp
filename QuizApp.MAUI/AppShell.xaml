<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="QuizApp.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:QuizApp.MAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="QuizApp.MAUI">

    <ShellContent Route="SettingsPage" ContentTemplate="{DataTemplate views:SettingsPage}" />
    <ShellContent Route="GamePage" ContentTemplate="{DataTemplate views:GamePage}" />
    <ShellContent Route="ResultsPage" ContentTemplate="{DataTemplate views:ResultsPage}" />
</Shell>
