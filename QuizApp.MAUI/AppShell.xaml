<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="QuizApp.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:QuizApp.MAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="QuizApp.MAUI">

    <ShellContent
        Title="Settings Page"
        ContentTemplate="{DataTemplate views:SettingsPage}"
        Route="Settings Page" />

    <ShellContent
        Title="Results Page"
        ContentTemplate="{DataTemplate views:ResultsPage}"
        Route="ResultsPage" />

    <ShellContent
        Title="Game Page"
        ContentTemplate="{DataTemplate views:GamePage}"
        Route="GamePage" />
</Shell>
