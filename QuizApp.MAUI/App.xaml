<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:QuizApp.MAUI"
             xmlns:converters="clr-namespace:QuizApp.MAUI.Converters"
             x:Class="QuizApp.MAUI.App">
    <Application.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Register SelectedAnswerConverter -->
            <converters:SelectedAnswerConverter x:Key="SelectedAnswerConverter" />

        </ResourceDictionary>
    </Application.Resources>
</Application>
